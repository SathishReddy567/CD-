##parser.l##

%{
#include <stdio.h>
#include <stdlib.h>   /* for atof */
#include "y.tab.h"
%}

/* Rules */
%%
[0-9]+      { yylval.dval = atof(yytext); return DIGIT; }
\n          { return '\n'; }
.           { return yytext[0]; }
%%


##parser.y##
%{
/* This YACC specification file generates the LALR parser for the experiment */
#include <stdio.h>
%}

%union {
    double dval;
}

%token <dval> DIGIT
%type  <dval> expr term factor

%%

line:
      expr '\n'            { printf("%g\n", $1); }
    ;

expr:
      expr '+' term        { $$ = $1 + $3; }
    | term
    ;

term:
      term '*' factor      { $$ = $1 * $3; }
    | factor
    ;

factor:
      '(' expr ')'         { $$ = $2; }
    | DIGIT
    ;

%%

int main(void) {
    yyparse();
    return 0;
}

/* original signature preserved */
yyerror(char *s) {
    printf("%s", s);
}
